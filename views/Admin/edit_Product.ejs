<%- include('../layout/header') %> 
<%- include('../partials/admin-header')  %> 

   
<section>
    <h1>Edit Product</h1>
  <div class="wrapper container">
      <div class="row justify-content-center mt-5" > 
          <div class="col-5"> 
                <form action="/admin/edit_product?id=<%= result._id %> " enctype="multipart/form-data"  method="post" > 
                  <div class="form-group"> 
                      <label for="productName">Product Name</label> 
                      <input type="text" name="productName" class="form-control" id="productName" value="<%= result.productName %> "> 
                  </div> 
                  <div class="form-group mt-3"> 
                      <label for="actualPrice">Actual Price</label> 
                      <input type="text" name="actualPrice" class="form-control" id="actualPrice" value="<%= result.actualPrice %> "> 
                  </div> 
                  <div class="form-group mt-3"> 
                      <label for="discountedPrice">Discounted Price</label> 
                      <input type="text" name="discountedPrice" class="form-control" id="discountedPrice" value="<%= result.discountedPrice %> "> 
                  </div> 
                  <div class="form-group mt-3"> 
                      <label for="description">Description</label> 
                      <input type="text" name="description" class="form-control" id="description" value="<%= result.description %> "> 
                  </div> 
                  <div class="form-group  mt-3"> 
                      <label for="stock">Stock</label> 
                      <input type="text" name="stock" class="form-control" id="stock" value="<%= result.stock %> "> 
                  </div> 
                  <div class="form-group mt-3"> 
                   
                      <select class="form-select" name="category" aria-label="Default select example" > 
                          <option selected><%= result.category %> </option> 
                          <option >Apple</option> 
                          <option >Realme</option> 
                          <option>Oppo</option>
                          <option>Poco</option>
                          <option>One Plus</option>

                        </select> 
                       
                  </div> 
               
                  <div class="row"> 
                      <div class="mt-3"> 
                        <img id="main-image" src="/images/<%= result.image1  %>  " width="250" style="width: 5rem;height: 5rem;"/> 
                          <input type="file" class="form-control" name="image1" id="formFile" accept="image/*" > 
                      </div> 
                      <div class="mt-3">
                        <img id="main-image" src="/images/<%= result.image2  %>  " width="250" style="width: 5rem;height: 5rem;"/>  
                          <input type="file" class="form-control" name="image2" id="formFile" accept="image/*" > 
                      </div> 
                      <!-- <div class="col-2 mt-3"> 
                          <input type="submit" class="btn btn-warning" value="Upload Images"> 
                      </div> --> 
                      <button type="submit" class="btn btn-warning mt-3">Update Product</button> 
                  </div> 
                </form> 
          </div> 
        </div>
      </div>


</section>


<%- include('../layout/footer') %> 
