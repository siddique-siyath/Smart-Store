<%- include('../layout/header') %>
    <%- include('../partials/admin-header') %>




<section class="h-100 h-custom" style="background-color: #ffff;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12">
          <div class="card card-registration card-registration-2" style="border-radius: 15px; border: 1px solid black;">
            <div class="card-body p-0">
              <div class="row g-0">
                <div class="col-lg-8">
                  <div class="p-5">
                    <div class="d-flex justify-content-between align-items-center mb-5">
                      <h1 class="fw-bold mb-0 text-black">Coupen</h1>
                      <h6 class="mb-0 text-muted"><%=// categories.length %> CoupenCodes </h6>
                    </div>
                    <hr class="my-4">                  
                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                        <table id="example" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Slno</th>
                                    <th>CoupenCode</th>
                                    <th>CoupenBill</th>
                                    <th>MinBill</th>
                                    <th>CoupenExpiry</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% //categories.forEach((category, index) => { %> 
                                    <% for(let i=0;i<result.length;i++){ %> 
                                    <tr>
                                       
                                        <td><%= result[i].couponcode %></td>
                                        <td><%= result[i].couponvalue %></td>
                                        <td><%= result[i].minbill %></td>
                                        <td><%= result[i].startdate %></td>
                                        <td><%= result[i].expirydate %></td>
                                        <td>
                                            <div style="display: flex;">
                                            
                                            <form action="/admin/delete-coupon?id=<%= result[i]._id %> " method="post">
                                            <button type="submit" style="border: none; background: none;" onclick="return  confirm('Do you want to delete <%= result[i].couponcode %>')"><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
                                              <span class="material-symbols-outlined" style="padding-top: 1.5rem;">
                                                delete
                                                </span></button>
                                            </form>
                                            </div>
                                          </td>
                                    </tr>
                                    <% } %> 
                                <%// }) %> 
                            </tbody>
                        </table>
                    </div>
  
                    <hr class="my-4">
                    
                    
                    <!-- <div class="pt-5">
                      <h6 class="mb-0"><a href="/user_home" class="text-body"><i
                            class="fas fa-long-arrow-alt-left me-2"></i>Back to shop</a></h6>
                    </div> -->
                  </div>
                </div>
                <div class="col-lg-4 bg-grey">
                  <div class="p-5">
                    <h3 class="fw-bold mb-5 mt-2 pt-1">Add Coupen</h3>
                    <hr class="my-4">
  
                    
                   
                   
  
                    <h5 class="text-uppercase mb-3">Add new Coupon</h5>
                  <form action="/admin/add-coupen" method="post">  
                    <div class="form-group mt-3"> 
                        <input required placeholder="CoupenName" type="description" name="couponcode" class="form-control" id="description"> 
                    </div>
                    <div class="form-group mt-3"> 
                        <input required placeholder="CoupenValue" type="number" name="couponvalue" class="form-control"> 
                    </div>
                    <div class="form-group mt-3"> 
                        <input type="number" name="minbill" class="form-control" placeholder="MinimumBill"> 
                    </div>
                    <div class="form-group mt-3"> 
                        <input type="date" name="startdate" class="form-control"> 
                    </div>
                    <div class="form-group mt-3"> 
                        <input type="date" name="expirydate" class="form-control"> 
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">AddCoupen</button> 
                    
               

                </form>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <script>
    	$(document).ready(function () {
    		$('#example').DataTable({
      		  "pageLength": 5
    		});
			});
  </script>

<%- include('../layout/footer') %>