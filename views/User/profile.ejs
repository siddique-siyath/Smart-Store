  <section class="vh-100" style="background-color: #bbf3c4;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-12 mb-4 mb-lg-0">
          <div class="card mb-3" style="border-radius: .5rem;">
            <div class="row g-0">
              <div class="col-md-4 gradient-custom text-center text-dark"
                style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp" 
                          alt="Avatar" class="img-fluid my-5" style="width: 80px;border-radius: 38px;height: 80px;" />
                          <a href="`/profile-edit" style="color: rgb(15, 14, 14);"><i class="fa-solid fa-pen-to-square proedi"><img style="margin-top: 4rem;margin-left: -2rem;" src="https://img.icons8.com/external-tanah-basah-basic-outline-tanah-basah/24/000000/external-photo-multimedia-tanah-basah-basic-outline-tanah-basah.png"/></i></a>
              
                <h5><%= docs.name %></h5>
              
              </div>
              <div class="col-md-8">
                <div class="card-body p-4">
                  <h6>Profile</h6>
                  <hr class="mt-0 mb-4">
                  <div class="row pt-1">
                    <div class="col-6 mb-3">
                      <h6>Email</h6>
                      <p class="text"><%= docs.email %></p>
                    </div>

                   
                      

                    <div class="col-6 mb-3">
                      <h6>Phone</h6>
                      <p class="text"><%= docs.mobile  %></p>
                    </div>

                    <% if(docs.detail==true){ %> 
                      <div class="col-6 mb-3"> 
                        <h6>address</address></h6> 
                        <p class="text-muted"><%= docs.address[0].name %> </p>
                        <p class="text-muted"><%= docs.address[0].address1 %> </p> 
                        <p class="text-muted"><%= docs.address[0].address2 %> </p>
                        <p class="text-muted"><%= docs.address[0].mobile %> </p>
                        <p class="text-muted"><%= docs.address[0].city %> </p> 
                        <p class="text-muted"><%= docs.address[0].state %> </p>
                        <p class="text-muted"><%= docs.address[0].zip %> </p>
                      </div> 
                      <% }else{ %>
                        <a href="/newAddress" style="text-decoration: none; color: blue;">
                          <p>Add a new address</p>
                      </a>
                          <% } %> 

                  </div>
                 
                  <hr class="mt-0 mb-4">
                  <div class="row pt-1">
                    <div class="col-6 mb-3">
                     <a href="/myOrder">
                       <button class="btn-2"><span>Orders</span></button>
                      </a>
                    </div>
                    
                  </div>
                  <div class="d-flex justify-content-start">
                    <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                    <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                    <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
