<%- include('../layout/header') %>
  <%- include('../partials/user-header') %>



    <!DOCTYPE html>
    <html lang="en">

    <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>My orders</title>

      <link rel="stylesheet" href="/public/stylesheets/bootstrap.min.css">
      <link rel="stylesheet" href="/public/stylesheets/templatemo.css">
      <link rel="stylesheet" href="/public/stylesheets/custom.css">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
      <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
      <link rel="stylesheet" href="/public/stylesheets/fontawesome.min.css">
    </head>

    <body>



      <section style="background-color: #eee;">

        <div class="container py-5">
          <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
              <div class="card shadow-0 border rounded-3">
                <div class="card-body">
                  <% for(i=0;i<docs.length;i++){ %>
                    <div class="row">
                      <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                        <h4 style="color: green;"> â‚¹ <%= docs[i].bill %>
                        </h4>
                      </div>
                      <div class="col-md-6 col-lg-6 col-xl-6">
                        <h5>orderid:<h5 style="color: red;">
                            <%= docs[i]._id %>
                          </h5>
                        </h5>


                        <div class="mb-2 text-muted small">

                          <span>orderd on</span>
                          <span class="text-primary">
                            <%= docs[i].Date %>
                          </span>

                          <br>
                          <span>payment method</span>
                          <span class="text-primary">
                            <%= docs[i].paymentMode %>
                          </span>
                        </div>
                        <p class="text-truncate mb-4 mb-md-0">

                        </p>
                      </div>
                      <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                        <div class="d-flex flex-row align-items-center mb-1">
                          <h4 class="mb-1 me-1"></h4>
                        </div>


                                  <% if(docs[i].orderStatus == 'return'){ %>
                                    <h6 class="text-success">returned </h6>
                                  <% }else{ %> 
                                    <h6 class="text-success">shipping </h6>
                                    
                                    <% } %> 

                                      <div class="d-flex flex-column mt-4">
                                        <a href="/myOrdersView?id=<%= docs[i]._id  %> "><button
                                            class="btn btn-primary btn-sm" type="submit">View details</button></a>

                                      </div>
                      </div>
                    </div>
                    <% } %>
                </div>
              </div>
            </div>
          </div>


    </body>

    </html>